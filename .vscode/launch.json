{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MyCPPFile",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.out",
            "args": [], // Command line arguments (if any)
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "compile", // Replace with your task name to compile the current file
            "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe", // Replace with the path to your GDB debugger (optional)
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
} 
